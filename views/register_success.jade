extends layout

block head
    +title("Register Success")
    style.
        .div1 {
            background-color: whitesmoke;
            text-align: center;
            margin-left: auto;
            margin-right: auto;
            margin-top: 20px;
            padding: 1% 5% 2% 5%;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            border-radius: 25px;
        }

        .div2 {
            text-align: left;
            width: 50%;
            margin-bottom: 0.25rem;
        }

        .container {
            width: 100%;
        }

        .btnwid {
            width: 80%;
            margin-left: 20px;
        }

block content
    .container
        .row(style='margin-top:20px')
            .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3.div1
                img(height="100px", width="100px", src="https://www.healthandsafetysigns.co.uk/wp-content/uploads/2017/08/tick.png")
                h5(style="margin-top: 10px;")
                    | Your account has been created!
                a(href="/")
                    | Back to Sign In in&nbsp;
                    strong#Time 3
                    | &nbsp;seconds...

    script.
        function changeTime(){
            var Time = $('#Time').text();
            Time = parseInt(Time);
            Time--;
            if (Time <= 0) window.location.href = "/";
            else {
                $('#Time').text(Time);
                setTimeout(changeTime, 1000);
            }
        }
        $(document).ready(function () {
            setTimeout(changeTime, 1000);
        });
